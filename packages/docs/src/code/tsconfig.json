{
  "extends": "astro/tsconfigs/strict",
  "include": ["./**/*.tsx"],
  "compilerOptions": {
    "baseUrl": "../..",
    "paths": {
      "@layouts/*": ["./src/layouts/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@components": ["./src/components/index.ts"],
      "@pardon/*": ["./src/pardon/*"]
    },
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxImportSource": "@expressive-code/core/hast"
  }
}
