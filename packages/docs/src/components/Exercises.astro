import { Tabs } from "@astrojs/starlight/components";
type Props = { class?: string } & Parameters<typeof Tabs>[0];

const props = Astro.props;
---

<div
  {...props}
  class={"relative border dark:border-gray-500 p-3 pt-0 " + (props.class ?? "")}
>
  <div
    class="absolute top-[-0px] right-[-55px] rotate-[30deg] bg-red-400 px-12 text-white shadow-sm shadow-gray-400 dark:bg-red-700 dark:shadow-sm dark:shadow-black dark:shadow-red-900"
  >
    Exercises
  </div>
  <Tabs>
    <slot />
  </Tabs>
</div>
