import Default from "@astrojs/starlight/components/PageFrame.astro";
import { ProductsView } from "@components";

const { server } = Astro.locals.starlightRoute.entry.data;
---

<>
  <Default {...Astro.props}>
    {Astro.slots.has("default") && <slot />}
    {Astro.slots.has("header") && <slot name="header" slot="header" />}
    {Astro.slots.has("sidebar") && <slot name="sidebar" slot="sidebar" />}
  </Default>
  {
    server === "products" && (
      <div class="fixed bottom-0 right-0 z-10">
        <div class="relative top-96 rounded-tl-md border-0 border-l-2 border-t-2 border-solid border-lime-600 bg-neutral-200 p-2 pb-1 pr-4 transition-[top] duration-500 dark:bg-neutral-800 [&:has(.inline-grid)]:top-0">
          <ProductsView />
        </div>
      </div>
    )
  }
</>
