import Default from "@astrojs/starlight/components/PageSidebar.astro";
import { TodoView } from "@components";

const { server } = Astro.locals.starlightRoute.entry.data;
---

{
  server != "todo" ? (
    <Default />
  ) : (
    <>
      <div class="right-sidebar-panel sl-hidden lg:sl-block relative flex h-full flex-col">
        <TodoView>
          <Default />
        </TodoView>
      </div>
      <div class="small-screen fixed right-0 bottom-0 z-50 rounded-tl-lg bg-gray-500/75 p-5 dark:bg-stone-700/75">
        <TodoView />
      </div>
    </>
  )
}

<style>
  /**
   * arguably, this is an improvement to the css in TwoColumnContent.astro
   * (note: mostly tested in Firefox)
   */
  @media (min-width: 72rem) {
    :global(.small-screen) {
      @apply hidden;
    }
    :global(.right-sidebar-container) {
      width: calc((100% - var(--sl-content-width)) / 2);
    }
    :global(.right-sidebar) {
      width: inherit;
      max-width: inherit;
    }
  }
</style>
