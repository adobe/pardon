import { Icon } from "@astrojs/starlight/components";
import type { StarlightIcon } from "@astrojs/starlight/types";

type IconProps = Parameters<typeof Icon>[0];

export type Props = Omit<IconProps, "name"> & {
  name: keyof typeof NamedIcons | StarlightIcon;
  titled?: boolean;
};

const NamedIcons = {
  setting: IconTablerSettings,
  pencil: IconTablerPencil,
  editor: IconTablerCode,
} as const;

const { name, titled, ...props } = Astro.props;

const NamedIcon = NamedIcons[name as keyof typeof NamedIcons];
---

<div class="iconic relative" data-titled={titled}>
  <slot />
  <div class="icon" data-name={name}>
    {
      NamedIcon ? (
        <NamedIcon class="text-2xl" color="gray" {...props} />
      ) : (
        <Icon
          name={name as StarlightIcon}
          class="icon text-3xl text-gray-500"
          {...props}
        />
      )
    }
  </div>
</div>

<style>
  .icon {
    @apply absolute top-[-9.5px] right-[9px] scale-75 rounded-full border-2 border-dotted;
  }

  .icon > * {
    transform: none;
  }

  .icon[data-name="pencil"] > * {
    @apply relative -top-[0.6px] left-[0.5px];
  }

  .iconic[data-titled] > .icon {
    @apply top-6;
  }

  .iconic > .icon {
    @apply opacity-50 transition-transform duration-700;
  }

  .iconic:has(.expressive-code .frame:hover .copy):not(:has(.no-copy)) > .icon,
  .iconic:has(.expressive-code .frame:focus-within :focus-visible):not(
      :has(.no-copy)
    )
    .icon,
  .iconic:has(.expressive-code .frame .copy .feedback.show):not(:has(.no-copy))
    > .icon {
    @apply -translate-x-8 opacity-30;
  }
</style>
