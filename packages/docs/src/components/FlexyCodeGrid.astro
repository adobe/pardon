import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"div"> & {
  centered?: boolean;
  right?: boolean;
  column?: boolean;
  initial?: boolean;
  class?: string;
};
const { centered, column, initial, right, class: class_ } = Astro.props;
---

<div
  class={[
    "flexy-code-grid not-content",
    centered && "flexy-code-grid-centered place-content-center",
    right && "place-content-end",
    column && "flex-col",
    initial && "[&>div]:!flex-initial",
    class_
  ].filter(Boolean).join(" ")}
>
  <slot />
</div>

<style is:global>
  .flexy-code-grid {
    @apply flex flex-1 gap-2;
    & > * {
      @apply min-w-0;
    }
    & > *:not(svg) {
      @apply grow;
    }
    & > svg {
      @apply place-self-center grow-0 shrink-0;
    }
    .code {
      @apply !px-1;
    }
    .copy {
      @apply !hidden;
    }
    figure {
      @apply !flex !min-h-full;
    }
    pre {
      @apply !grow;
    }
  }
  .flexy-code-grid-centered {
    .ec-line {
      @apply !max-w-fit;
    }
    code {
      @apply !grid grow !place-content-center !py-2;
    }
  }
</style>
