import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"div"> & {
  centered?: boolean;
  right?: boolean;
  column?: boolean;
  initial?: boolean;
  class?: string;
};
const { centered, column, initial, right, class: class_ } = Astro.props;
---

<div
  class={[
    "flexy-code-grid not-content",
    centered && "flexy-code-grid-centered place-content-center",
    right && "place-content-end",
    column && "flex-col",
    initial && "[&>div]:flex-initial!",
    class_,
  ]
    .filter(Boolean)
    .join(" ")}
>
  <slot />
</div>

<style is:global>
  @reference "../styles/global.css";

  .flexy-code-grid {
    @apply gap-3 bg-neutral-500/5 p-3;
    @apply flex flex-1;
    & > * {
      @apply min-w-0;
    }
    & > *:not(svg) {
      @apply grow;
    }
    & > svg {
      @apply shrink-0 grow-0 place-self-center;
    }
    .code {
      @apply px-1!;
    }
    .copy {
      @apply hidden!;
    }
    figure {
      @apply flex! min-h-full! flex-col;
    }
    .expressive-code .frame.has-title pre {
      border: var(--ec-brdWd) solid var(--ec-brdCol);
    }
    pre {
      @apply grow! overflow-auto;
    }
    figcaption.header {
      @apply grid place-items-center;
      @apply bg-none;
      &::before {
        @apply border-none outline-none;
      }
      & > span.title {
        @apply bg-inherit;
        &::after {
          @apply border-none!;
        }
      }
    }
  }
  .flexy-code-grid-centered {
    .ec-line {
      @apply max-w-fit!;
    }
    code {
      @apply grid! grow place-content-center! py-2!;
    }
  }
</style>
