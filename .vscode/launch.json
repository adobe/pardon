  "version": "0.2.0",
  "configurations": [
    {
      "address": "127.0.0.1",
      "localRoot": "${workspaceFolder}",
      "name": "Attach to Remote",
      "port": 9229,
      "remoteRoot": "Absolute path to the remote directory containing the program",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "pardon",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/core",
      "runtimeArgs": [
        "--import",
        "tsx/esm",
        "--stack-trace-limit=100",
        "src/entry/main/cli/index.ts",
        "test.http",
        "--http"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      // Files to exclude from debugger (e.g. call stack)
      "skipFiles": [
        // Node.js internal core modules
        "<node_internals>/**",
        // Ignore all dependencies (optional)
        "${workspaceFolder}/packages/core/node_modules/**"
      ]
    },
    {
      "name": "pardon - todo-flow",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/core",
      "runtimeArgs": [
        "--import",
        "tsx/esm",
        "--stack-trace-limit=100",
        "src/entry/main/cli/index.ts",
        "--cwd=/Users/afreidin/code/hub/adobe/pardon/examples/todo",
        "todo/todos/toggle.flow",
        "env=local",
        "username=test",
        "todo=T1001"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      // Files to exclude from debugger (e.g. call stack)
      "skipFiles": [
        // Node.js internal core modules
        "<node_internals>/**",
        // Ignore all dependencies (optional)
        "${workspaceFolder}/packages/core/node_modules/**"
      ]
    },
    {
      "name": "node:test",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/core",
      "runtimeArgs": [
        "--test",
        "--stack-trace-limit=100",
        "--import",
        "tsx/esm",
        "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      // Files to exclude from debugger (e.g. call stack)
      "skipFiles": [
        // Node.js internal core modules
        "<node_internals>/**",
        // Ignore all dependencies (optional)
        "${workspaceFolder}/packages/core/node_modules/**"
      ]
    },
    {
      "name": "node:test:only",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/core",
      "runtimeArgs": [
        "--test",
        "--test-only",
        "--import",
        "tsx/esm",
        "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      // Files to exclude from debugger (e.g. call stack)
      "skipFiles": [
        // Node.js internal core modules
        "<node_internals>/**"
        // Ignore all dependencies (optional)
        //"${workspaceFolder}/packages/core/node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "tsx:run",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/core",
      "runtimeArgs": [
        "--import",
        "tsx/esm",
        "src/entry/main/cli/index.ts",
        "test.http",
        "--http"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      // Files to exclude from debugger (e.g. call stack)
      "skipFiles": [
        // Node.js internal core modules
        "<node_internals>/**",
        // Ignore all dependencies (optional)
        "${workspaceFolder}/packages/core/node_modules/**"
      ]
    },
    {
      "name": "dist/main",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/core",
      "runtimeArgs": ["dist/main.js", "test.http"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      // Files to exclude from debugger (e.g. call stack)
      "skipFiles": [
        // Node.js internal core modules
        "<node_internals>/**",
        // Ignore all dependencies (optional)
        "${workspaceFolder}/packages/core/node_modules/**"
      ]
    }
  ]
